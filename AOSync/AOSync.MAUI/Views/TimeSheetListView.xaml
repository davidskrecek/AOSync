<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AOSync.MAUI.Views.TimeSheetListView"
             xmlns:viewModels="using:AOSync.MAUI.ViewModels"
             Title="VÃ½kazy">

    <ContentPage.BindingContext>
        <viewModels:TimeSheetListViewModel x:Name="ViewModel" />
    </ContentPage.BindingContext>

    <CollectionView ItemsSource="{Binding TimeSheets}"
                    Margin="20">

        <CollectionView.Header>
            <Grid ColumnDefinitions="*,*,*,*" ColumnSpacing="20" Padding="0,0,0,10">
                <Label Text="Id" FontSize="18" Grid.Column="0" TextColor="Azure" FontAttributes="Bold" />
                <Label Text="ExternalId" FontSize="18" Grid.Column="1" TextColor="Azure" FontAttributes="Bold" />
                <Label Text="Date" FontSize="18" Grid.Column="2" TextColor="Azure" FontAttributes="Bold" />
                <Label Text="Minutes" FontSize="18" Grid.Column="3" TextColor="Azure" FontAttributes="Bold" />
            </Grid>
        </CollectionView.Header>

        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Grid ColumnDefinitions="*,*,*,*" ColumnSpacing="20">
                    <Label Text="{Binding Id}" FontSize="18" Grid.Column="0" TextColor="Azure" />
                    <Label Text="{Binding ExternalId}" FontSize="18" Grid.Column="1" TextColor="Azure" />
                    <Label Text="{Binding Date}" FontSize="18" Grid.Column="2" TextColor="Azure" />
                    <Label Text="{Binding Minutes}" FontSize="18" Grid.Column="3" TextColor="Azure" />
                </Grid>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>